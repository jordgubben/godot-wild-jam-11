{
  "first": {
    "content": "RAGS: You are in a dark corridor with an embroidered crimson rug and two doors. One smells good, one smells bad.",
    "options": [
      {
        "condition": "postcard_found",
        "option_false": ["Look under the rug.", "check_rug"],
      },
      ["Enter the stinky door.", "rags/bathroom", "first"],
      ["Enter the fragrant door.", "riches/kitchen", "first"]
    ]
  },
  "check_rug": {
    "condition": "bool",
    "variable": "postcard_found",
    "true": {
      "content": "There is nothing under the rug.",
      "next": "first"
    },
    "false": {
      "content": "There is a postcard under the rug. It's fanmail from some cult member.",
      "options": [
        ["Take it.", "take_postcard"],
        ["Leave it.", "first"]
      ]
    }

    
  },
  "take_postcard": {
    "set_var": ["postcard_found", true],
    "next": "first"
  }
}